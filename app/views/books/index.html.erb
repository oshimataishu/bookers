<div id="notice">
  <% flash.each do |key, value| %>
   <%= content_tag(:div, value, class: key) %>
  <% end %>
</div>

<h1>Books</h1>

<table>
  
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy","/books/#{book.id}", method: :delete, "data-confirm" => "Are you sureï¼Ÿ"  %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>

<h2>New book</h2>

  <% if @book.errors.any? %>
    <div class="error_print_area">
      <h2><%= @book.errors.count %> errors prohibited this book from being saved: </h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book do |f| %>
  <% if @book.errors.any? %>
  <div class="field">
    <% if @book.title.present? %>
      <p class="form_text"><label>Title</label></p>
      <%= f.text_field :title %>
    <% else %>
      <p class="error_form_text"><label>Title</label></p>
      <div class="error_field"><%= f.text_field :title %></div>
    <% end %>
  </div>
  
  <div class="field">
    <% if @book.body.present? %>
      <p class="form_text"><label>Body</label></p>
      <%= f.text_area :body %>
    <% else %>
      <p class="error_form_text"><label>Body</label></p>
      <div class="error_field"><%= f.text_area :body %></div>
    <% end %>
  </div>
  
  <div class="action">
    <%= f.submit " Create Book " %>
  </div>
  
  <% else %>
  
  <div class="field">
   <p class="form_text"><label>Title</label></p>
   <%= f.text_field :title %>
  </div>
  
  <div class="field">
   <p class="form_text"><label>Body</label></p>
   <%= f.text_area :body %>
  </div>
  
  <div class="action">
    <%= f.submit " Create Book " %>
  </div>
  
  <% end %>
  <% end %>
 