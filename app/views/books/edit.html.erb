<h1>Editing Book</h1>

<% if @book.errors.any? %>
    <div class="error_print_area">
      <h2><%= @book.errors.count %> errors prohibited this book from being saved: </h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
 <% end %>

  <%= form_with model: @book do |f| %>
  <% if @book.errors.any? %>
  <div class="field">
    <% if @book.title.present? %>
      <p class="form_text"><label>Title</label></p>
      <%= f.text_field :title %>
    <% else %>
      <p class="error_form_text"><label>Title</label></p>
      <div class="error_field"><%= f.text_field :title %></div>
    <% end %>
  </div>
  
  <div class="field">
    <% if @book.body.present? %>
      <p class="form_text"><label>Body</label></p>
      <%= f.text_area :body %>
    <% else %>
      <p class="error_form_text"><label>Body</label></p>
      <div class="error_field"><%= f.text_area :body %></div>
    <% end %>
  </div>
  
  <div class="action">
    <%= f.submit " Update Book " %>
  </div>
  
  <% else %>
  
  <div class="field">
   <p class="form_text"><label>Title</label></p>
   <%= f.text_field :title %>
  </div>
  
  <div class="field">
   <p class="form_text"><label>Body</label></p>
   <%= f.text_area :body %>
  </div>
  
  <div class="action">
    <%= f.submit " Update Book " %>
  </div>
  <% end %>
  <% end %>
  
<div class="a"><%= link_to "Show", book_path(@book.id) %></div>
 | 
<div class="a"><%= link_to "Back", "/books" %></div>

